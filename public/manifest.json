{
  "manifest_version": 3,
  "name": "__MSG_name__",
  "description": "__MSG_description__",
  "version": "1.1.4",
  "icons": {
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "default_locale": "en",
  "content_scripts": [
    {
      "matches": [
        "https://open.spotify.com/track/*",
        "https://open.spotify.com/album/*",
        "https://www.deezer.com/*/track/*",
        "https://www.deezer.com/*/album/*",
        "https://music.apple.com/*/album/*",
        "https://music.youtube.com/*",
        "https://listen.tidal.com/track/*",
        "https://listen.tidal.com/album/*",
        "https://soundcloud.com/*",
        "https://www.pandora.com/*",
        "https://music.amazon.com/albums/*",
        "https://web.napster.com/track/*",
        "https://web.napster.com/album/*"
      ],
      "all_frames": true,
      "js": ["content.js"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html",
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "permissions": ["storage"]
}
